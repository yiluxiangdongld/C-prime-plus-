#include <iostream>
using namespace std;
double temperatureTransform(double);
int main()
{
	double Celsius, Fahrenheit;
	cout << "Please enter a Celsius value: ";
	cin >> Celsius;
	cin.get();
	Fahrenheit = temperatureTransform(Celsius);
	cout << Celsius <<" degrees Celsius is "<< Fahrenheit << " degrees Fahrenheit ";
	cin.get();
	return 0;
}
 double temperatureTransform(double celsius)
{
	double Fahrenheit = celsius*1.8+32.0;
	return Fahrenheit;
}
