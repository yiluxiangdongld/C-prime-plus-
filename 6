#include <iostream>
using namespace std;
int timeTransform(double);
int main()
{
	double light_years, astronomical_units;
	cout << "Enter the number of light_years: ";
	cin >> light_years;
	cin.get();
	astronomical_units=timeTransform(light_years);
	cout << light_years <<"light_years="<< astronomical_units<< " astronomical_units ";
	cin.get();
	return 0;
}
int timeTransform(double light_years)
{
	double astronomical_units= light_years*63240;
	return astronomical_units;
}
